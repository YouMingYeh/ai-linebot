{
  "name": "ai-line-bot",
  "version": "1.0.0",
  "description": "LINE Bot AI application",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "tsx watch index.ts",
    "init:env": "tsx scripts/init.ts",
    "test": "jest",
    "test:db": "tsx scripts/test-db-connection.ts",
    "test:prisma": "tsx scripts/test-prisma-connection.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "db:sync": "tsx scripts/sync-db-schema.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "postinstall": "prisma generate",
    "prepare": "prisma generate"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.14",
    "@ai-sdk/openai": "^1.3.20",
    "@inquirer/prompts": "^7.5.0",
    "@line/bot-sdk": "^9.9.0",
    "@prisma/client": "^6.7.0",
    "@types/pg": "^8.11.14",
    "ai": "^4.3.10",
    "chalk": "5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "pg": "^8.15.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.32",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "inquirer": "^12.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.3.2",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4"
}
